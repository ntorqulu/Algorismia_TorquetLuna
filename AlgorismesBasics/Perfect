'''
Trobar si un num Ã©s perfecte, utilitzant la funcio divisors
'''

def Perfecte(num):
    if Divisors(num) == num:
            return True
    else:
        return False
    
def Divisors(num):
    llista = []
    for i in range(1, (num//2 +1)):
        if num % i == 0:
            llista.append(i)
    return sum(llista)
                   
Perfecte(6)
